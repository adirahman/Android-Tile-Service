<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TileScreen">
        <activity
            android:name=".GhostInputActivity"
            android:exported="false"
            android:theme="@style/Theme.App.GhostInput"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true" />

        <service
            android:name=".QuickStatusTileService"
            android:exported="true"
            android:icon="@drawable/ic_qs_status"
            android:label="ARC Quick Notes"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>

            <!-- Recommended jika tile berperilaku seperti toggle/switch untuk aksesibilitas. :contentReference[oaicite:5]{index=5} -->
            <meta-data
                android:name="android.service.quicksettings.TOGGLEABLE_TILE"
                android:value="true" />
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TileScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PickerActivity"
            android:exported="false"
            android:theme="@style/Theme.TileScreen.Dialog" />
    </application>

</manifest>